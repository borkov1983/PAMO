<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b97180a3"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DodajActivity"
    tools:showIn="@layout/activity_dodaj">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimaryLight">

        <TextView
            android:id="@+id/pln"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="@string/PLN"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/kwota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/Kwota"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="160dp"
            android:maxLength="8"/>

    </LinearLayout>

    <EditText
        android:id="@+id/odbiorca"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="58dp"
        android:ems="10"
        android:hint="@string/Odbiorca"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="92dp" />

    <TextView
        android:id="@+id/termin"
        android:layout_width="190dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_above="@+id/uwagi"
        android:layout_marginEnd="-180dp"
        android:layout_marginBottom="-55dp"
        android:layout_toStartOf="@+id/tvdate"
        android:text="@string/termin"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tvdate"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="209dp"
        android:layout_marginTop="121dp"
        android:gravity="center"
        android:hint="@string/data"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/uwagi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/odbiorca"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="55dp"
        android:ems="10"
        android:hint="@string/Uwagi"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="138dp" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_below="@+id/uwagi"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryLight"
        android:orientation="horizontal">



    </LinearLayout>

    <Button
        android:id="@+id/Anuluj"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="20dp"
        android:background="#ff050d"
        android:onClick="Anuluj"
        android:text="@string/anuluj" />

    <Spinner
        android:id="@+id/coile"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@+id/powiadomienie"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:entries="@array/coile"
        android:textSize="24sp">

    </Spinner>

    <TextView
        android:id="@+id/powiadomienie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="349dp"
        android:gravity="center"
        android:text="@string/powiadomienie"
        android:textSize="16dp">

    </TextView>

    <Button
        android:id="@+id/Akceptuj"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        android:background="#2e840e"
        android:onClick="Akceptuj"
        android:enabled="false"
        android:text="@string/akceptuj" />

    <EditText
        android:id="@+id/dzien"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/powiadomienie"
        android:layout_alignParentStart="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="-76dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="number" />

    <Spinner
        android:id="@+id/powtarza"
        android:layout_width="184dp"
        android:layout_height="52dp"
        android:layout_alignBaseline="@+id/dzien"
        android:layout_marginStart="150dp"

        android:entries="@array/powtarza"
        android:textSize="24sp" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="230dp">

        <RadioButton
            android:id="@+id/niepowtarzasie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:checked="false"
            android:gravity="center"
            android:onClick="wylaczCoIlePlatnosc"
            android:text="@string/niepowtarzasie" />

        <RadioButton
            android:id="@+id/powtarzasie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:layout_marginStart="200dp"
            android:checked="false"
            android:gravity="center"
            android:onClick="wlaczCoIlePlatnosc"
            android:text="@string/powtarzasie" />

    </RadioGroup>

</RelativeLayout>